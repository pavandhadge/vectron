# Example cache configuration for production deployment
# Copy this file to .env or export these variables

# Cache backend: memory or redis
CACHE_BACKEND=memory

# Memory cache settings
CACHE_MAX_SIZE=2000
CACHE_DEFAULT_TTL=15m
CACHE_CLEANUP_INTERVAL=5m
CACHE_EVICTION_POLICY=lru
CACHE_STATS_ENABLED=true
CACHE_MAX_MEMORY_MB=128
CACHE_BACKGROUND_CLEANUP=true

# Redis cache settings (used when CACHE_BACKEND=redis)
REDIS_ADDRESS=localhost:6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_POOL_SIZE=10
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s
REDIS_KEY_PREFIX=reranker:

# Service settings
RERANKER_PORT=50051
RERANKER_STRATEGY=rule